apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-prod
spec:
  acme:
    email: "{{ user.mail }}"
    server: https://acme-v02.api.letsencrypt.org/directory
    privateKeySecretRef:
      name: letsencrypt-prod
    solvers:
    - dns01:
        rfc2136:
          nameserver: "{{ dns.server }}"
          tsigSecretSecretRef:
            name: dns-secret
            key: nsupdate-key
          tsigKeyName: "{{ dns.keyname }}"
          tsigAlgorithm: "{{ dns.tsigalgo }}"
