[Unit]
Description=gmedia mergerfs mount
Requires=rclone.service
After=rclone.service

[Service]
Type=forking
ExecStart=/usr/bin/mergerfs {{ lookup('env','HOME') }}/local:{{ lookup('env','RCLONE_MNT_DIR') }} {{ lookup('env','HOME') }}/Medias -o rw,use_ino,allow_other,func.getattr=newest,category.action=all,category.create=ff,cache.files=auto-full
ExecStop=/bin/fusermount -u {{ lookup('env','HOME') }}/Medias
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target

