[Unit]
Description=Zurg
After=network-online.target

[Service]
User={{ lookup('env','USER') }}
Group={{ lookup('env','MYGIDNAME') }}
Type=simple

WorkingDirectory={{ lookup('env','HOME') }}/seedbox/app_settings/zurg
ExecStart={{ lookup('env','HOME') }}/seedbox/app_settings/zurg/zurg
ExecStop=killall zurg
Restart=always
RestartSec=5

[Install]
WantedBy=default.target
